# =============================================
# React Frontend - Environment Configuration
# =============================================

# =======================
# Application Settings
# =======================
REACT_APP_ENV=development
REACT_APP_NAME="Order Management System"
REACT_APP_VERSION=1.0.0

# =======================
# API Configuration
# =======================
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_VERSION=v1

# =======================
# Feature Flags
# =======================
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_SERVICE_WORKER=false
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=false

# =======================
# UI Configuration
# =======================
REACT_APP_PRIMARY_COLOR=#007bff
REACT_APP_SECONDARY_COLOR=#6c757d
REACT_APP_COMPANY_NAME="Your Company Name"
REACT_APP_COMPANY_LOGO=/logo.png

# =======================
# Authentication
# =======================
REACT_APP_TOKEN_KEY=auth_token
REACT_APP_USER_KEY=user_data
REACT_APP_REFRESH_TOKEN_KEY=refresh_token

# =======================
# External Services (Optional)
# =======================
# REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# REACT_APP_SENTRY_DSN=your-sentry-dsn
# REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxx

# =======================
# Map Services (Optional)
# =======================
# REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =======================
# Social Media (Optional)
# =======================
# REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id
# REACT_APP_INSTAGRAM_APP_ID=your-instagram-app-id

# =======================
# Payment Configuration (Optional)
# =======================
# REACT_APP_PAYMENT_ENABLED=false
# REACT_APP_CURRENCY=RUB
# REACT_APP_STRIPE_ENABLED=false

# =======================
# Notification Configuration
# =======================
REACT_APP_NOTIFICATION_TIMEOUT=5000
REACT_APP_MAX_NOTIFICATIONS=5

# =======================
# Performance
# =======================
REACT_APP_LAZY_LOAD_ENABLED=true
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_CACHE_ENABLED=true